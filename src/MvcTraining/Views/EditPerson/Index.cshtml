@model IEnumerable<Person>
@{
    ViewBag.Title = "People";
}

<h2>People</h2>

<a class="btn btn-info" href="@Url.Action("Create")">Create</a>

@*@Html.ActionLink("Create", "Create", null, new {@class = "btn btn-info"})*@

<table class="table table-striped">
    <tr>
        <th></th>
        <th>@Html.DisplayNameFor(p => p.Gender)</th>
        <th>@Html.DisplayNameFor(p => p.GivenName)</th>
        <th>@Html.DisplayNameFor(p => p.LastName)</th>
    </tr>
    @foreach (var person in Model)
    {
        <tr>
            <td>@Html.ActionLink("Edit", "Edit", new {id = person.Id})</td>
            <td>@Html.DisplayFor(p => person.Gender)
            <td>@Html.DisplayFor(p => person.GivenName)
            <td>@Html.DisplayFor(p => person.LastName)
        </tr>
    }
</table>